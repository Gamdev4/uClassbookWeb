---
const {
    title = "Actualizaciones constantes",
    description = "Lorem ipsum dolor sit, amet consectetur adipisicing elit."
} = Astro.props;
---

<div class="md:flex-1 md:px-4 mb-8 md:mb-0">
  <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6 border border-slate-200 dark:border-slate-700">
    <p class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{title}</p>
    <p class="text-sm text-gray-500 dark:text-gray-400">{description}</p>
  </div>
</div>
