---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props as Props;
---

<div class="md:flex-1 md:px-4 mb-8 md:mb-0">
  <div class="bg-slate-800 rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6 border border-slate-700">
    <p class="text-xl font-semibold text-white mb-2">{title}</p>
    <p class="text-sm text-gray-300">{description}</p>
  </div>
</div>
