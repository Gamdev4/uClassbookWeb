---
interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
}

const { date, title, description, link } = Astro.props;
---

<div class="relative max-w-[820px] mx-auto px-6 my-6">
  <span class="absolute left-[43px] top-0 w-0.5 h-full bg-slate-700"></span>

  <div class="relative ml-10">
    <span
      class="absolute left-[-28px] top-1/2 -translate-y-1/2
             w-4 h-4 bg-slate-800 rounded-full
             border-4 border-slate-900 z-10">
    </span>

    <time class="text-sm font-medium text-slate-400">{date}</time>
  </div>

  <h3 class="text-xl font-bold text-white mt-1 mb-2 ml-10">{title}</h3>
  <p class="text-sm text-slate-400 ml-10">{description}</p>

  <div class="h-4"></div>

  {link && (
    <a
      href={link}
      class="inline-flex items-center ml-10 text-white font-medium rounded-xl px-4 py-2
             bg-gradient-to-r from-sky-500 to-cyan-500
             hover:from-sky-600 hover:to-cyan-600
             transition-all transform hover:-translate-y-1 shadow-md text-sm"
    >
      Ver m√°s
      <svg
        class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" fill="none"
        viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M19 12H5m14 0-4 4m4-4-4-4" />
      </svg>
    </a>
  )}
</div>


