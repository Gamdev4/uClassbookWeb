---
interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
}

const { date, title, description, link } = Astro.props;
---

<div class="relative max-w-[820px] mx-auto px-6 my-6">
  <span class="absolute -left-3 top-0 w-0.5 h-full bg-slate-700"></span>

  <span class="absolute -left-4 top-4 size-3 rounded-full bg-slate-800 border-0.5 border-gray-900"></span>

  <time class="text-sm font-medium text-slate-400">{date}</time>
  <h3 class="text-xl font-bold text-white mt-1 mb-2">{title}</h3>
  <p class="text-sm text-slate-400">{description}</p>

  <div class="h-4"></div>

  {link && (
    <a
      href={link}
      class="inline-flex items-center text-white font-medium rounded-xl px-4 py-2 bg-gradient-to-r from-sky-500 to-cyan-500 hover:from-sky-600 hover:to-cyan-600 transition-all transform hover:-translate-y-1 shadow-md text-sm"
    >
      Ver m√°s
      <svg
        class="w-4 h-4 ml-1"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 12H5m14 0-4 4m4-4-4-4"
        />
      </svg>
    </a>
  )}
</div>
